import socket

host = "145.89.157.142" #IP adres van je pi
port = 5560

s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
s.connect((host, port))


while True:
    command = input("Wat is het wachtwoord: ")
    if command == "hello":
        s.send(str.encode(command))
        print ("Wachtwoord OK")
    elif command == "KILL":
        s.send(str.encode(command))
        break
    s.send(str.encode(command))
    reply = s.recv(1024)
    print (reply.decode("utf-8"))

#s.close()
